generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id    String  @id @default(uuid()) @db.Uuid
  email String  @unique
  name  String?

  // Prepared relation (expand Trip model later)
  trips Trip[] @relation("UserTrips")
}

model Trip {
  id          String   @id @default(uuid()) @db.Uuid
  creator_id  String   @db.Uuid
  name        String
  destination String
  start_date  DateTime
  end_date    DateTime

  creator User @relation("UserTrips", fields: [creator_id], references: [id])

  @@index([creator_id])
}
