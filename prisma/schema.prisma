generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id    String  @id @default(uuid()) @db.Uuid
  email String  @unique
  name  String?
  username String? @unique

  created_at DateTime @default(now())

  // Prepared relation (expand Trip model later)
  trips Trip[] @relation("UserTrips")

  memberships TripMember[]

  expensePayments ExpensePayer[]

  expenseShares ExpenseShare[]

  performedTripLogs TripLog[] @relation("TripLogPerformedBy")
}

model Trip {
  id          String   @id @default(uuid()) @db.Uuid
  creator_id  String   @db.Uuid
  name        String
  destination String
  start_date  DateTime
  end_date    DateTime

  notes      String?
  created_at DateTime @default(now())

  creator User @relation("UserTrips", fields: [creator_id], references: [id])

  members TripMember[]
  expenses Expense[]
  logs     TripLog[]
  invitations TripInvitation[]

  @@index([creator_id])
}

model Expense {
  id           String   @id @default(uuid()) @db.Uuid
  trip_id      String   @db.Uuid
  description  String
  total_amount Decimal  @db.Decimal(10, 2)
  date         DateTime

  created_at DateTime @default(now())

  trip Trip @relation(fields: [trip_id], references: [id])

  payers ExpensePayer[]
  shares ExpenseShare[]

  @@index([trip_id])
}

model ExpenseShare {
  expense_id  String  @db.Uuid
  user_id     String  @db.Uuid
  amount_owed Decimal @db.Decimal(10, 2)

  expense Expense @relation(fields: [expense_id], references: [id])
  user    User    @relation(fields: [user_id], references: [id])

  @@id([expense_id, user_id])
  @@index([user_id])
}

model ExpensePayer {
  expense_id  String  @db.Uuid
  user_id     String  @db.Uuid
  amount_paid Decimal @db.Decimal(10, 2)

  expense Expense @relation(fields: [expense_id], references: [id])
  user    User    @relation(fields: [user_id], references: [id])

  @@id([expense_id, user_id])
  @@index([user_id])
}

model TripLog {
  id           String   @id @default(uuid()) @db.Uuid
  trip_id      String   @db.Uuid
  action_type  String
  performed_by String   @db.Uuid
  details      Json
  timestamp    DateTime

  trip      Trip @relation(fields: [trip_id], references: [id])
  performer User @relation("TripLogPerformedBy", fields: [performed_by], references: [id])

  @@index([trip_id])
  @@index([performed_by])
}

model TripMember {
  trip_id String @db.Uuid
  user_id String @db.Uuid

  joined_at DateTime @default(now())

  trip Trip @relation(fields: [trip_id], references: [id])
  user User @relation(fields: [user_id], references: [id])

  @@id([trip_id, user_id])
  @@unique([trip_id, user_id])
  @@index([user_id])
}

model TripInvitation {
  id         String   @id @default(uuid()) @db.Uuid
  trip_id    String   @db.Uuid
  token      String   @unique
  status     String   @default("active")
  created_at DateTime @default(now())

  trip Trip @relation(fields: [trip_id], references: [id], onDelete: Cascade)

  @@index([trip_id])
}
