generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id    String  @id @default(uuid()) @db.Uuid
  email String  @unique
  name  String?

  // Prepared relation (expand Trip model later)
  trips Trip[] @relation("UserTrips")

  memberships TripMember[]
}

model Trip {
  id          String   @id @default(uuid()) @db.Uuid
  creator_id  String   @db.Uuid
  name        String
  destination String
  start_date  DateTime
  end_date    DateTime

  creator User @relation("UserTrips", fields: [creator_id], references: [id])

  members TripMember[]

  @@index([creator_id])
}

model TripMember {
  trip_id String @db.Uuid
  user_id String @db.Uuid

  trip Trip @relation(fields: [trip_id], references: [id])
  user User @relation(fields: [user_id], references: [id])

  @@id([trip_id, user_id])
  @@index([user_id])
}
